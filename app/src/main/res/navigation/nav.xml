<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="my.com.fashionapp.UI.HomeFragment"
        android:label="Home Page"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_likeFragment"
            app:destination="@id/likeFragment" />
    </fragment>
    <fragment
        android:id="@+id/likeFragment"
        android:name="my.com.fashionapp.UI.LikeFragment"
        android:label="Like Page"
        tools:layout="@layout/fragment_like" >
        <action
            android:id="@+id/action_likeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="my.com.fashionapp.UI.SearchFragment"
        android:label="Search Page"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_shopFragment"
            app:destination="@id/shopFragment" />
    </fragment>
    <fragment
        android:id="@+id/shopFragment"
        android:name="my.com.fashionapp.UI.ShopFragment"
        android:label="Shop Page"
        tools:layout="@layout/fragment_shop" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="my.com.fashionapp.UI.SignInFragment"
        android:label="Sign In Page"
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="my.com.fashionapp.UI.SignUpFragment"
        android:label="Sign Up Page"
        tools:layout="@layout/fragment_sign_up" />
    <fragment
        android:id="@+id/insertProductFragment"
        android:name="my.com.fashionapp.UI.insertProductFragment"
        android:label="Insert Product Page"
        tools:layout="@layout/fragment_insert_product" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="true" />
</navigation>